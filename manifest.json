{
  "manifest_version": 3,
  "name": "プロンプト管理",
  "version": "1.0",
  "description": "プロンプトを管理する拡張機能",
  "permissions": ["storage", "unlimitedStorage"],
  "action": {
    "default_popup": "app.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
